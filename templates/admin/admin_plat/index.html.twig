{% extends "adminBase.html.twig" %}

{% block title %}
	<title>
		Admin plat |Quai Antique</title>
{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}

	{% include "admin/_partials/_cards.html.twig" %}
	<div class="detailss">
		<div class="recentOrders card">
			<div class="cardHeader">
				<h2>
					<strong>Liste des plats</strong>
				</h2>
				<a href="{{ path('app_admin_plat_new') }}" class="btn">
					<ion-icon name="add-outline"></ion-icon>Ajouter un plat</a>
			</div>
			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Titre</th>
						<th>Description</th>
						<th>Prix</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for plat in pagination %}
						<tr>
							<td>{{ plat.id }}</td>
							<td>{{ plat.title }}</td>
							<td style="width: 50%;">{{ plat.description }}</td>
							<td>{{ plat.price }}â‚¬</td>
							<td>
								<button class="btn">
									<a href="{{ path('app_admin_plat_show', {'id': plat.id}) }}">
										<ion-icon name="eye-outline" class="iconBx"></ion-icon>
									</a>
								</button>
								<button class="btn">
									<a href="{{ path('app_admin_plat_edit', {'id': plat.id}) }}">
										<ion-icon name="pencil" class="iconBx"></ion-icon>
									</a>
								</button>
								<button class="btn">{{ include('admin/admin_plat/_delete_form.html.twig') }}</button>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			{% include "admin/_partials/_pagination.html.twig" %}
		</div>
	</div>
{% endblock %}
