{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/styleHome.css') }}">
	<link rel="stylesheet" href="{{ asset('assets/css/styleUser.css') }}">
{% endblock %}

{% block body %}
	<body>
		<div class="">
			<img src={{asset('assets/images/banniere/banAnti1.jpg')}} width="100%">
		</div>

		<div class="container section text-center">
			<div class="">
				<h4 class="section-subtitle">A Chambéry, osez pousser la porte du restaurant</h4>
			</div>
			<div
				class="">
				{#  <h2 class="section-title" >QUAI ANTIQUE</h2> #}
				<img src={{asset('assets/images/logo/LogoHome.png')}} width="100%">
			</div>
			<div class="">
				<h4 class="section-subtitle">C’est par une porte de maison particulière que vous pourrez y accéder.<br>
					Pour acquérir une expérience gastronomique, à travers une cuisine sans artifice.
				</h4>
			</div>
		</div>

		<div class=" image-container ">
			<img class="bann2" src={{asset('assets/images/banniere/banAnti2.jpg')}} width="100%">
			<div class="texte text-center">
				<h1 class="title">DÉCOUVREZ NOTRE GALERIE</h1>
			</div>
		</div>

		<div class="container">
			<div class="row ">
				<div class=" col card shadow-sm hover py-3 ">
					{% for image in images %}
						<figure class="figure-hover ">
							<img src="{{ vich_uploader_asset(image, 'file') }}" alt="{{ image.fileName }}" class=" card shadow-sm"/>
							<figcaption class="figcaption">{{ image.name }}</figcaption>
						</figure>
					{% endfor %}
				</div>
			</div>
			<div class="d-grid col-md-6 mt-3 col-sm-8 col-12 mx-auto text-center">
				<button type="button" href="{{ path('app_reservation_new') }}">
					<a class="lien" href="{{ path('app_reservation_new') }}">Réserver
					</button>
				</div>
			</div>
		</body>
	{% endblock %}

