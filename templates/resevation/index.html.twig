{% extends 'base.html.twig' %}

{% block title %}Resevation index{% endblock %}

{% block body %}
    <h1>Resevation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Time</th>
                <th>Numbre_of_people</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resevation in resevations %}
            <tr>
                <td>{{ resevation.id }}</td>
                <td>{{ resevation.date ? resevation.date|date('Y-m-d') : '' }}</td>
                <td>{{ resevation.time }}</td>
                <td>{{ resevation.numbreOfPeople }}</td>
                <td>
                    <a href="{{ path('app_resevation_show', {'id': resevation.id}) }}">show</a>
                    <a href="{{ path('app_resevation_edit', {'id': resevation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_resevation_new') }}">Create new</a>
{% endblock %}
